	bindsym b      exec "xdotool mousemove_relative --  -14     0"
	bindsym eacute exec "xdotool mousemove_relative --  -42     0"
	bindsym p      exec "xdotool mousemove_relative --   42     0"
	bindsym o      exec "xdotool mousemove_relative --   14     0"

	bindsym t      exec "xdotool mousemove_relative --    0  -240"
	bindsym s      exec "xdotool mousemove_relative --    0   -80"
	bindsym r      exec "xdotool mousemove_relative --    0    80"
	bindsym n      exec "xdotool mousemove_relative --    0   240"

	bindsym v      exec "xdotool mousemove_relative --    0    -9"
	bindsym d      exec "xdotool mousemove_relative --    0   -27"
	bindsym l      exec "xdotool mousemove_relative --    0    27"
	bindsym j      exec "xdotool mousemove_relative --    0     9"

