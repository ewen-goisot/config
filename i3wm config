mode "mouse" {
	bindsym a      exec "xdotool mousemove_relative -- -400     0"
	bindsym u      exec "xdotool mousemove_relative -- -130     0"
	bindsym i      exec "xdotool mousemove_relative --  130     0"
	bindsym e      exec "xdotool mousemove_relative --  400     0"

	bindsym b      exec "xdotool mousemove_relative --  -14     0"
	bindsym eacute exec "xdotool mousemove_relative --  -42     0"
	bindsym p      exec "xdotool mousemove_relative --   42     0"
	bindsym o      exec "xdotool mousemove_relative --   14     0"

	bindsym t      exec "xdotool mousemove_relative --    0  -240"
	bindsym s      exec "xdotool mousemove_relative --    0   -80"
	bindsym r      exec "xdotool mousemove_relative --    0    80"
	bindsym n      exec "xdotool mousemove_relative --    0   240"

	bindsym v      exec "xdotool mousemove_relative --    0    -9"
	bindsym d      exec "xdotool mousemove_relative --    0   -27"
	bindsym l      exec "xdotool mousemove_relative --    0    27"
	bindsym j      exec "xdotool mousemove_relative --    0     9"

	bindsym 1      exec "xdotool click 1"
	bindsym 2      exec "xdotool click 2"
	bindsym 3      exec "xdotool click 3"
	bindsym 4      exec "xdotool click 4"
	bindsym 5      exec "xdotool click 5"
	bindsym 6      exec "xdotool click 6"
	bindsym 7      exec "xdotool click 7"
	bindsym 8      exec "xdotool click 8"
	bindsym 9      exec "xdotool click 9"
	bindsym 0      exec "xdotool click 1; xdotool click 1"





	bindsym BackSpace mode "default"
}

mode "lazy" {
	bindsym KP_Left focus left
	bindsym KP_Right focus right
	bindsym KP_Up focus up
	bindsym KP_Begin focus down
	bindsym KP_End move left
	bindsym KP_Next move right
	bindsym KP_Down move up
	bindsym KP_Insert move down
	bindsym KP_Delete focus parent
	bindsym KP_Home workspace prev
	bindsym KP_Prior workspace next
	bindsym Left focus left
	bindsym Right focus right
	bindsym Up focus up
	bindsym Down focus down
	bindsym Shift+Left move left
	bindsym Shift+Right move right
	bindsym Shift+Up move up
	bindsym Shift+Down move down
	bindsym Return exec terminator
	bindsym BackSpace mode "default"
}
mode "almostLazy"{
	bindsym Escape mode "lazy"
	bindsym Shift+Escape mode "default"
	bindsym $mod+r mode "resize"
	bindsym $mod+a exec "cd Documents; ./scrb1.sh"
	bindsym $mod+b exec "cd ~/Documents; ./sURL.sh"
	bindsym $mod+d exec "cd ~/Documents/i3script; ./superscribe.sh"
}
