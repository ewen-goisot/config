for_window [class="Chromium.*"] title_format "<big><span background='purple'  foreground='white'> C </span> %title</big>"
for_window [class="Firefox.*"]  title_format "<big><span background='purple'  foreground='white'> F </span> %title</big>"
for_window [class="Vivaldi.*"]  title_format "<big><span background='purple'  foreground='white'> V </span> %title</big>"
for_window [class="Gnome-t.*"]  title_format "<big><span background='black'   foreground='white'> G </span> %title</big>"
for_window [class="St"]         title_format "<big><span background='black'   foreground='white'> St </span> %title</big>"
for_window [class="Tilix"]      title_format "<big><span background='black'   foreground='white'> T </span> %title</big>"
for_window [title=".*Prefer.*"] title_format "<big><span background='white'   foreground='black' size='small'> %class </span> %title</big>"
for_window [class="Zathura"]    title_format "<big><span background='yellow'  foreground='black'> Z </span> %title</big>"
for_window [class="mpv|vlc"]    title_format "<big><span background='blue' foreground='white'> %class </span> %title</big>"
for_window [class="Gvim"]       title_format "<big><span background='pink' foreground='black'> %class </span> %title</big>"
