<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<keys
   name="My custom shortcuts">
  <bind
     key="plus"
     modifiers="Ctrl"
     action="ZoomIn"
     display="true" />
  <bind
     key="minus"
     modifiers="Ctrl"
     action="ZoomOut"
     display="true" />
  <bind
     key="minus"
     action="SelectionDiff"
     display="true" />
  <bind
     key="plus"
     action="SelectionUnion"
     display="true" />
  <bind
     key="asterisk"
     action="SelectionIntersect"
     display="true" />
  <bind
     key="slash"
     action="SelectionDivide"
     display="true" />
  <bind
     key="asciicircum"
     action="SelectionSymDiff"
     display="true" />
  <bind
     key="slash"
     modifiers="Ctrl"
     action="SelectionCutPath"
     display="true" />
  <bind
     key="parenright"
     action="SelectionOffset"
     display="true" />
  <bind
     key="parenleft"
     action="SelectionInset"
     display="true" />
  <bind
     key="parenleft"
     modifiers="Alt"
     action="SelectionInsetScreen10"
     display="true" />
  <bind
     key="parenright"
     modifiers="Alt"
     action="SelectionOffsetScreen10"
     display="true" />
  <bind
     key="parenleft"
     modifiers="Ctrl"
     action="SelectionInsetScreen"
     display="true" />
  <bind
     key="parenright"
     modifiers="Ctrl"
     action="SelectionOffsetScreen"
     display="true" />
  <bind
     key="exclam"
     modifiers="Ctrl"
     action="EditInvertInAllLayers"
     display="true" />
  <bind
     key="apostrophe"
     modifiers="Ctrl"
     action="ZoomNext"
     display="true" />
  <bind
     key="apostrophe"
     action="ZoomPrev"
     display="true" />
  <bind
     key="End"
     modifiers="Shift"
     action="LayerToBottom"
     display="true" />
  <bind
     key="Home"
     modifiers="Shift"
     action="LayerToTop"
     display="true" />
  <bind
     key="d"
     modifiers="Ctrl"
     action="EditDuplicate"
     display="true" />
  <bind
     key="D"
     modifiers="Ctrl"
     action="EditDuplicate" />
  <bind
     key="eacute"
     action="ToolStar"
     display="true" />
