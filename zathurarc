set recolor true
set show-v-scrollbar true
set selection-clipboard clipboard
set window-title-home-tilde true
set statusbar-home-tilde true
set statusbar-v-padding 0
set statusbar-h-padding 0
set page-padding 5

map _ mark_evaluate
map \' mark_evaluate
map y mark_add

map p print

map a focus_inputbar
map i follow
map I display_link
map u toggle_index
map [index] u toggle_index

map . toggle_statusbar
map , toggle_inputbar

map + zoom in
map - zoom out
map <C-+> zoom in
map <C--> zoom out

map b rotate rotate-ccw
map B rotate rotate-cw
map c zoom in
map C jumplist backward
map m scroll up
map M navigate previous
map l zoom out
map L jumplist forward
map f scroll half-up
map F scroll full-up
map <C-c> zoom default
map <C-l> recolor

map g goto top
map G goto bottom
map t scroll left
map T scroll page-top
map s scroll down
map S navigate next
map n scroll right
map N scroll page-bottom
map r scroll half-down
map R scroll full-down
map <C-r> reload

map q quit
map d focus_inputbar "/"
map D focus_inputbar "?"
map v search forward
map V search backward
map j toggle_page_mode
map w adjust_window width
map W adjust_window best-fit


